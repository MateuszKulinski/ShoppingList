<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_cell"
    android:layout_marginTop="@dimen/padding_cell"
    android:background="@drawable/button_background"
    android:padding="@dimen/padding_cell">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_lists_item_name"
            style="@style/MyListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example" />

        <TextView
            android:id="@+id/my_lists_item_price"
            style="@style/MyListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:textSize="@dimen/text_size_title_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/my_lists_item_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/padding_cell"
        android:src="@drawable/trash_black" />
</RelativeLayout>