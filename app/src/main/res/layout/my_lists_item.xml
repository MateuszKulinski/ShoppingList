<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_cell"
    android:layout_marginTop="@dimen/padding_cell"
    android:background="@drawable/button_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_cell">

    <TextView
        android:id="@+id/my_lists_item_name"
        style="@style/MyListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/example"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/my_lists_item_price"
        style="@style/MyListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/example" />


</LinearLayout>