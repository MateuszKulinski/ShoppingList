<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/padding_cell"
    android:background="@drawable/button_background_unf"
    android:padding="@dimen/padding_cell">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/new_list_item_prod_name"
            style="@style/MyListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/new_list_item_prod_quantity"
            style="@style/MyListTitle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example" />

        <TextView
            android:id="@+id/new_list_item_prod_price"
            style="@style/MyListTitle.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example" />
    </LinearLayout>

    <ImageView
        android:id="@+id/new_list_item_prod_trach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_cell"
        android:src="@drawable/trash" />
</RelativeLayout>