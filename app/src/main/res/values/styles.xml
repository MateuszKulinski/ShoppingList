<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:layout_marginLeft">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MyButtonStyle.MyButtonStyleSmall">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_height">@dimen/button_height_small</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_horizontal_big</item>
        <item name="android:layout_marginRight">@dimen/button_margin_horizontal_big</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical_small</item>
    </style>

    <style name="MyListTitle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MyTextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="MyTextInputStyle.MyEditTextStyle">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <dimen name="button_margin_horizontal_big">50dp</dimen>
</resources>
